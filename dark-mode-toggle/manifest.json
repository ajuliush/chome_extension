{
    "manifest_version": 3,
    "name": "Dark Mode Toggle",
    "version": "1.0",
    "description": "A simple Chrome extension to toggle dark mode.",
    "permissions": [
      "activeTab", "storage", "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Toggle Dark Mode"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  